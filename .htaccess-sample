<IfModule mod_rewrite.c>

    # End the processing, if a rewrite already occurred
    RewriteEngine On

    RewriteBase /bic-ffyw/
    RewriteCond %{REQUEST_URI}  !(/bic-ffyw/uploads) [NC]
    # the main rewrite rule for the frontend application
    RewriteCond %{REQUEST_URI} !^/bic-ffyw/(frontend/web|backend/web|admin)
    RewriteRule ^(.*) /bic-ffyw/frontend/web/$1 [L]

    # redirect to the page without a trailing slash (uncomment if necessary)
    #RewriteCond %{REQUEST_URI} ^/demo/advanced/admin/$
    #RewriteRule ^(admin)/ /demo/advanced/$1 [L,R=301]
    # the main rewrite rule for the backend application
    RewriteCond %{REQUEST_URI} ^/bic-ffyw/admin
    RewriteRule ^admin(.*) /bic-ffyw/backend/web/$1 [L]

    # if a directory or a file of the frontend application exists, use the request directly

    RewriteCond %{REQUEST_URI} ^/bic-ffyw/frontend/web

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # otherwise forward the request to index.php
    RewriteRule . /bic-ffyw/frontend/web/index.php [L]

    # if a directory or a file of the backend application exists, use the request directly
    RewriteCond %{REQUEST_URI} ^/bic-ffyw/backend/web
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # otherwise forward the request to index.php
    RewriteRule . /bic-ffyw/backend/web/index.php [L]

    RewriteCond %{REQUEST_URI} \.(htaccess|htpasswd|svn|git)
    RewriteRule \.(htaccess|htpasswd|svn|git) - [F]
</IfModule>
